<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentTracker.Views.AddClass">
    <AbsoluteLayout>
        <BoxView BackgroundColor="#0d47a1" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" />
        <BoxView BackgroundColor="White" AbsoluteLayout.LayoutBounds="0.5, 0.5, 0.9,0.9 " AbsoluteLayout.LayoutFlags="All" />
        <Image Source="WGULogo.png" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" Opacity="0.3" />
        
        <Label Text="Class Name" x:Name="ClassName" AbsoluteLayout.LayoutBounds="0.2,0.05, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Entry x:Name="classNameText"  AbsoluteLayout.LayoutBounds="0.2,0.06, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="10" ClearButtonVisibility="WhileEditing"/>

        <Label Text="Instructor Name" x:Name="InstructorName" AbsoluteLayout.LayoutBounds="0.2,0.125, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Entry x:Name="instructorNameText" Placeholder="Instructor Name:" ClearButtonVisibility="WhileEditing" Keyboard="Default" AbsoluteLayout.LayoutBounds="0.2,0.15, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

        <Label Text="Instructor Phone" x:Name="InstructorPhone" AbsoluteLayout.LayoutBounds="0.2,0.22, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Entry x:Name="instructorPhoneText" Placeholder="Instructor Phone:" ClearButtonVisibility="WhileEditing" Keyboard="Telephone" AbsoluteLayout.LayoutBounds="0.2,0.25, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

        <Label Text="Start Date" x:Name="classStartDateLabel" AbsoluteLayout.LayoutBounds="0.2,0.31, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <DatePicker x:Name="classStartDatePicker"  AbsoluteLayout.LayoutBounds="0.2,0.34, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

        <Label Text="End Date" x:Name="classEndDate" AbsoluteLayout.LayoutBounds="0.2,0.42, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <DatePicker x:Name="classEndDatePicker"  AbsoluteLayout.LayoutBounds="0.2,0.44, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

        <Label Text="Course Status" x:Name="courseStatus" AbsoluteLayout.LayoutBounds="0.2,0.51, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Picker x:Name="classStatusPicker"  AbsoluteLayout.LayoutBounds="0.2,0.54, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional">
            <Picker.Items>
                <x:String>In-Progress</x:String>
                <x:String>Completed</x:String>
                <x:String>Dropped</x:String>
                <x:String>Not-Enrolled</x:String>
            </Picker.Items>
        </Picker>

        <Label Text="Notes" x:Name="courseNotes" AbsoluteLayout.LayoutBounds="0.2,0.62, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Editor x:Name="courseNotesText" Placeholder="Notes:" Keyboard="Default" AbsoluteLayout.LayoutBounds="0.2,0.65, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" />

        <Label Text="Enable Notifications" x:Name="notifications" AbsoluteLayout.LayoutBounds="0.2,0.79, 0.5, 50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" FontSize="15"/>
        <Switch x:Name="EnableNotificationsToggle" ThumbColor="#0d47a1" Toggled="Notifications_OnToggle" AbsoluteLayout.LayoutBounds="0.1,0.8, AutoSize, AutoSize" AbsoluteLayout.LayoutFlags="XProportional,YProportional"/>

        <Button Text="Add Class" BackgroundColor="Silver" TextColor="White" CornerRadius="5" BorderColor="#0d47a1"  AbsoluteLayout.LayoutBounds="0.15,0.9,0.25,50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Clicked="AddClassButton_Clicked" />
        <Button Text="Cancel" BackgroundColor="Silver" TextColor="White" CornerRadius="5" BorderColor="#0d47a1"  AbsoluteLayout.LayoutBounds="0.85,0.9,0.25,50" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" Clicked="CancelButton_Clicked" />
    </AbsoluteLayout>
</ContentPage> 
